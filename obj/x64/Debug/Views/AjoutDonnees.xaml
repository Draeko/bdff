<Page
    x:Class="BDFF.Views.AjoutDonnees"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BDFF.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Grid.Column="2"
                Grid.Row="3">
        <DatePicker x:ConnectionId='2' Name="DP_DateAchat" />
        <ComboBox x:ConnectionId='3' Name="CBB_NomArticle" 
                  Header="Nom de l'article: " 
                  Width="200" 
                  Height="55" 
                  IsEditable="True"
                                                                    />
        <ComboBox x:ConnectionId='4' Name="CBB_Categorie" 
                  Header="Catégorie"
                  Width="200"
                  Height="55"
                  IsEditable="True" />
        <TextBox x:ConnectionId='5' Name="TB_PrixUnitaire" Header="Prix unitaire: " Width="200" Height="55" HorizontalAlignment="Left"/>
        <TextBox x:ConnectionId='6' Name="TB_Quantite" Header="Quantite: " Width="200" Height="55" HorizontalAlignment="Left"/>
        <ComboBox x:ConnectionId='7' Name="CBB_TauxTVA" 
                  Header="Taux TVA:" 
                  Width="200" 
                  Height="55" 
                  IsEditable="True" />
        <Button x:ConnectionId='8' Name="B_Validation" Content="Valider"                          Margin="0 10 0 0" />
    </StackPanel>
</Page>

